<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.belajar.calistung.belajarcalistung.HelpActivity">

    <Button
        android:id="@+id/button12"
        android:onClick="kembali"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/tombolback"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="helpwarna"
        android:background="@drawable/tombolhelpwarna"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/button12"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <Button
        android:onClick="helpangka"
        android:background="@drawable/tombolhelphangka"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button12"
        android:layout_toEndOf="@+id/button12" />

    <Button
        android:onClick="helphuruf"
        android:background="@drawable/tombolhelphuruf"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button12"
        android:layout_toStartOf="@+id/button12" />

</RelativeLayout>
